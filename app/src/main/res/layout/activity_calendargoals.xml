<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:barchart="http://github.com/ITheBK/BarChart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCalendarGoals"
    tools:layout_editor_absoluteY="81dp">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="368dp"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/calendarView"
        app:layout_constraintTop_toTopOf="@id/calendarView" />

    <TextView
        android:id="@+id/dailyGoalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/dateView"
        app:layout_constraintTop_toTopOf="@id/dateView" />

    <Button
        android:id="@+id/EditGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="484dp"
        android:visibility="gone"
        android:text="EDIT GOAL"
        app:layout_constraintStart_toStartOf="@id/calendarView"
        app:layout_constraintTop_toTopOf="@id/calendarView" />

    <me.ithebk.barchart.BarChart
        android:id="@+id/goalProgressBar"
        android:layout_width="316dp"
        android:layout_height="27dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@id/dailyGoalView"
        app:layout_constraintTop_toTopOf="@id/dailyGoalView"
        barchart:bar_color="@color/colorPrimary"
        barchart:bar_max_value="100"
        barchart:bar_show_animation="true"
        barchart:bar_show_auto_color="false"
        barchart:bar_show_value="true"
        barchart:bar_spaces="0dp"
        barchart:bar_text_color="#808080"
        barchart:bar_text_size="10sp"
        barchart:bar_type="horizontal"
        barchart:bar_width="316dp" />

    <TextView
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/dailyGoalView"
        app:layout_constraintTop_toTopOf="@id/dailyGoalView" />

</androidx.constraintlayout.widget.ConstraintLayout>